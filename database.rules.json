{
  "rules": {
    "userInfo": {
      "$user_id": {
        ".write": "$user_id === auth.uid",
        ".read": "$user_id === auth.uid"
      }
    },
    "userCarts": {
      "$user_id": {
        ".write": "$user_id === auth.uid",
        ".read": "$user_id === auth.uid"
      }
    },
    "userFavCarts": {
      "$user_id": {
        ".write": "$user_id === auth.uid",
        ".read": "$user_id === auth.uid"
      }
    },
    "userHistory": {
      "$user_id": {
        ".write": "$user_id === auth.uid",
        ".read": "$user_id === auth.uid"
      }
    },
    "userPastOrders": {
      "$user_id": {
        ".write": "$user_id === auth.uid",
        ".read": "$user_id === auth.uid"
      }
    },
    "cases": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "caseQueues": {
      ".read": false,
      ".write": false
    },
    "kartInfo": {
      ".indexOn": "currentLocation",
      ".read": true,
      ".write": true
    },
    ".read": false,
    ".write": false
  }
}
